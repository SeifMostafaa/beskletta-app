<!DOCTYPE html>
<html lang="en">
   <body>
      <!-- header section start -->
      <div class="header_section header_bg">
         <form action=<%=bicycles_path(anchor: 'cycles')%>>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
               <a href="<%= root_path %>" class="logo"><img src="/assets/logo.png"></a>
               <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
               </button>
               <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <input name="search_query" type="text" class="form-control" placeholder="Search ...">
                  <div class="form-group col-md-3 col-sm-12">
                     <label for="depositAmount" style="color: white;">Price Starts From: </label>
                     <input name="price_gte" type="number" class="form-control" id="depositAmount">
                  </div>
                  <div class="form-group col-md-3 col-sm-12">
                     <label for="depositAmount" style="color: white;">Price To: </label>
                     <input name="price_lte" type="number" class="form-control" id="depositAmount">
                  </div>
                  <button type="submit" class="btn btn-primary">Filter</button>
               </div>
               <div id="main">
                  <span style="font-size:36px;cursor:pointer; color: #fff" onclick="openNav()"><img src="/assets/search-icon.png" style="height: 30px;"></span>
               </div>
         </nav>
         </form>
         <!-- banner section start -->
         <div class="banner_section layout_padding">
            <div id="main_slider" class="carousel slide" data-ride="carousel">
               <div class="carousel-inner">
                  <% Bicycle.all.each do |bicycle|%>
                     <% if Bicycle.first == bicycle %>
                        <div class="carousel-item active">
                     <% else %>
                        <div class="carousel-item">
                     <% end %>
                        <div class="container">
                           <div class="row">
                              <div class="col-md-7">
                                 <div class="best_text">Best</div>
                                 <div class="image_1"><img src="<%= bicycle.photo.url %>"></div>
                              </div>
                              <div class="col-md-5">
                                 <h1 class="banner_taital">New Model Cycle</h1>
                                 <p class="banner_text">It is a long established fact that a reader will be distracted by the readable content </p>
                              </div>
                           </div>
                        </div>
                     </div>
                  <% end %>
               </div>
               <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
               <i class="fa fa-angle-left"></i>
               </a>
               <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
               <i class="fa fa-angle-right"></i>
               </a>
            </div>
         </div>
         <!-- banner section end -->
      </div>
      <!-- header section end -->
      <!-- cycle section start -->
      <div class="cycle_section layout_padding" id='cycles'>
         <div class="container">
            <h1 class="cycle_taital">Our cycle</h1>
            <p class="cycle_text">It is a long established fact that a reader will be distracted by the </p>
            <% @bicycles.all.each_with_index do |bicycle, i|%>
              <%if i % 2 == 0 %>
                <div class="cycle_section_2 layout_padding">
                  <div class="row">
                      <div class="col-md-6">
                        <div class="box_main_3">
                            <h6 class="number_text_2"><%= "0#{i+1}" %></h6>
                            <div class="image_2"><img src="<%= bicycle.photo.url %>"></div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <h1 class="cycles_text"><%= bicycle.name %></h1>
                        <p class="lorem_text"><%= bicycle.style.gsub("\n", "<br/>").html_safe %></p>
                        <p class="lorem_text"><%= bicycle.description.gsub("\n", "<br/>").html_safe %></p>
                        <div class="btn_main">
                            <div class="buy_bt"><a href="<%= bicycle_path(bicycle.id) %>">Show More</a></div>
                            <h4 class="price_text">Price <span style=" color: #f7c17b">$</span> <span style=" color: #325662"><%= bicycle.price.truncate(3) %></span></h4>
                        </div>
                      </div>
                  </div>
                </div>
              <% else %>
                <div class="cycle_section_3 layout_padding">
                  <div class="row">
                      <div class="col-md-6">
                        <h1 class="cycles_text"><%= bicycle.name %></h1>
                        <p class="lorem_text"><%= bicycle.style.gsub("\n", "<br/>").html_safe %></p>
                        <p class="lorem_text"><%= bicycle.description.gsub("\n", "<br/>").html_safe %></p>
                        <div class="btn_main">
                            <div class="buy_bt"><a href="<%= bicycle_path(bicycle.id) %>">Show More</a></div>
                            <h4 class="price_text">Price <span style=" color: #f7c17b">$</span> <span style=" color: #325662"><%= bicycle.price.truncate(3) %></span></h4>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="box_main_3">
                            <h6 class="number_text_2"><%= "0#{i+1}" %></h6>
                            <div class="image_2"><img src="<%= bicycle.photo.url %>"></div>
                        </div>
                      </div>
                  </div>
                </div>
              <% end %>
            <% end %>
         </div>
      </div>
      <!-- cycle section end -->
      <!-- copyright section start -->
      <div class="copyright_section">
         <div class="container">
            <p class="copyright_text">Copyright 2023 All Right Reserved By Beskeletta</p>
         </div>
      </div>
      <!-- copyright section end -->    


            <!-- Javascript files-->
      <script src="/assets/jquery.min.js"></script>
      <script src="/assets/popper.min.js"></script>
      <script src="/assets/bootstrap.bundle.min.js"></script>
      <script src="/assets/jquery-3.0.0.min.js"></script>
      <script src="/assets/plugin.js"></script>
      <!-- sidebar -->
      <script src="/assets/jquery.mCustomScrollbar.concat.min.js"></script>
      <script src="/assets/custom.js"></script>
      <!-- javascript --> 
      <script src="/assets/owl.carousel.js"></script>
      <script src="https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
      <script>
         function openNav() {
           document.getElementById("mySidenav").style.width = "250px";
           document.getElementById("main").style.marginLeft = "250px";
         }
         
         function closeNav() {
           document.getElementById("mySidenav").style.width = "0";
           document.getElementById("main").style.marginLeft= "0";
          
         }

         $("#main").click(function(){
             $("#navbarSupportedContent").toggleClass("nav-normal")
         })
      </script>
      
   </body>
</html>